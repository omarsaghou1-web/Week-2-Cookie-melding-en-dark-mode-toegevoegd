        <button id="accept-cookies-btn">Accepteren</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        const PicLogo = $('.logoPic');
        const Body1 = $('body'); 
        const DarkModeToggle = $('#dark-mode-toggle'); 
        const cookieBanner = $('#cookie-banner');
        const acceptButton = $('#accept-cookies-btn');

        PicLogo.hide();
        PicLogo.slideDown(850);
        Body1.hide();
        Body1.slideDown(850); 

        DarkModeToggle.on('click', function () {
            Body1.toggleClass('dark-mode'); 

            if (Body1.hasClass('dark-mode')) {
                console.log("Dark Mode Aangezet.");
                $('.KleurKnop').text('Schakel Light Mode');
            } else {
                console.log("Dark Mode Uitgezet.");
                $('.KleurKnop').text('Schakel Dark Mode');
            }
        });

        acceptButton.on('click', function() {
            cookieBanner.slideUp(300, function() {
                $(this).remove(); 
            });
            
            console.log("Cookie-melding weggeklikt.");
        });
    </script>
